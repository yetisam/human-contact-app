# Human Contact Server Environment Configuration

# Server
PORT=5000
NODE_ENV=development

# Database
DATABASE_URL="postgresql://human_contact:your_secure_password@localhost:5432/human_contact"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_refresh_secret_here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Email (SendGrid or SMTP)
EMAIL_PROVIDER=smtp
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SENDGRID_API_KEY=
EMAIL_FROM=noreply@humancontact.app

# SMS (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ID Verification (Persona)
PERSONA_API_KEY=
PERSONA_TEMPLATE_ID=
PERSONA_ENVIRONMENT=sandbox

# Push Notifications (Firebase)
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# Payments (Stripe)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Security
ENCRYPTION_KEY=your_32_byte_encryption_key_here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
